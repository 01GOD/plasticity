{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es6",
        "lib": [
            "es2020"
        ],
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}